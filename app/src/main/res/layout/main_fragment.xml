<!--suppress CheckTagEmptyBody -->
<RelativeLayout
  android:layout_height = 'match_parent'
  android:layout_width = 'match_parent'
  android:paddingBottom = "@dimen/Activity_Vertical_Margin"
  android:paddingLeft = "@dimen/Activity_Horizontal_Margin"
  android:paddingRight = "@dimen/Activity_Horizontal_Margin"
  android:paddingTop = "@dimen/Activity_Vertical_Margin"
  xmlns:android = 'http://schemas.android.com/apk/res/android'
  xmlns:tools = 'http://schemas.android.com/tools'
>
  <Button
    android:drawableLeft='@drawable/ic_button_withings'
    android:drawableStart='@drawable/ic_button_withings'
    android:id = "@+id/Withings_Button"
    android:layout_alignParentEnd = "true"
    android:layout_alignParentLeft = "true"
    android:layout_alignParentRight = "true"
    android:layout_alignParentStart = "true"
    android:layout_alignParentTop = "true"
    android:text = "@string/Import_Withings_CVS"
    tools:ignore = "RtlHardcoded,UnusedAttribute"
    style='@style/Menu_Button'
  />
  <Button
    android:drawableLeft='@drawable/ic_button_kettler'
    android:drawableStart='@drawable/ic_button_kettler'
    android:id = "@+id/Ketfit_Button"
    android:layout_alignParentEnd = "true"
    android:layout_alignParentLeft = "true"
    android:layout_alignParentRight = "true"
    android:layout_alignParentStart = "true"
    android:layout_below = "@+id/Withings_Button"
    android:text = "@string/Import_Ketfit_CVS"
    tools:ignore = "RtlHardcoded,UnusedAttribute"
    style='@style/Menu_Button'
  />
  <Button
    android:drawableLeft='@drawable/ic_button_fit'
    android:drawableStart='@drawable/ic_button_fit'
    android:id = "@+id/connect"
    android:layout_alignParentEnd = "true"
    android:layout_alignParentLeft = "true"
    android:layout_alignParentRight = "true"
    android:layout_alignParentStart = "true"
    android:layout_below = "@+id/Ketfit_Button"
    android:text = "@string/Connect"
    tools:ignore = "RtlHardcoded,UnusedAttribute"
    style='@style/Menu_Button'
  />
  <EditText
    android:editable = "false"
    android:elegantTextHeight = "true"
    android:ems = "10"
    android:enabled = "false"
    android:focusable = "false"
    android:focusableInTouchMode = "false"
    android:gravity = "top|start"
    android:id = "@+id/Error_Text"
    android:inputType = "none|textMultiLine"
    android:layout_alignEnd = "@+id/Ketfit_Button"
    android:layout_alignParentBottom = "true"
    android:layout_alignParentEnd = "true"
    android:layout_alignParentStart = "true"
    android:layout_alignStart = "@+id/Ketfit_Button"
    android:layout_below = "@+id/connect"
    android:layout_height = "match_parent"
    android:layout_marginBottom = "@dimen/Widget_Margin"
    android:layout_marginLeft = "@dimen/Widget_Margin"
    android:layout_marginRight = "@dimen/Widget_Margin"
    android:layout_marginTop = "@dimen/Widget_Margin"
    android:layout_width = "match_parent"
    android:scrollIndicators = "top|bottom|start|end"
    android:textStyle = "normal"
    android:typeface = "monospace"
    tools:ignore = "Deprecated,UnusedAttribute"
  />
</RelativeLayout>
