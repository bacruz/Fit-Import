function Build-Debug ()
{
    pushd "${PROJECT_HOME}"
	gradlew build
	gradlew :Fit-Import-Lib:test
	gradlew :Fit-Import-App:connectedAndroidTest
    popd

    return
} # Build-Debug

Build-Debug "${@}"

