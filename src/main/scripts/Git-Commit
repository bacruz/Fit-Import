function Git-Commit ()
{
    local in_Comment="${1}"

    pushd ${PROJECT_HOME}
	gcp					    \
	    --verbose				    \
	    --update				    \
	    --target-directory=src/config/IntelliJ  \
	    .idea/runConfigurations/*.xml
	    
	git add .
	git commit -c"${in_Comment}"
	git push
    popd
}

${@}

